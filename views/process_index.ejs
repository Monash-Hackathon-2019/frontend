<% include partials/header %>



	<div class = "container">
		<div class="jumbotron">
	  		<h1>Lot Search</h1>
	  		<div class="row">
	  			<div class="input-group input-group-lg col-lg-6">
					  <span class="input-group-addon" id="sizing-addon1">Key <i class="fas fa-key"></i></span>
					  <input type="number" class="form-control" placeholder="Lot ID" aria-describedby="sizing-addon1">
				</div>
				<span><button class="btn btn-default btn-lg col-lg-6">Search</button></span>
	  		</div>
	  		<hr>
			<table class="table">
			  <thead>
			    <tr>
			      <th scope="col">Lot ID</th>
			      <th scope="col">Lot Name</th>
			      <th scope="col">Quantity (pcs.)</th>
			      <th scope="col">Status</th>
			      <th scope="col">Lot Cost (RM)</th>
			      <th scope="col">Lot Sell (RM)</th>
			      <th scope="col">Overall Completion (%)</th>
			      <th scope="col"></th> 
			    </tr>
			  </thead>			
			  <tbody>
				<% processes.forEach(function(process){ %>					  
					<tr>
					  <th scope="row"><%= process.lotId %></th>					
					  <td><%= process.lotName %></td>
					  <td><%= process.totalQuantity %></td>
					  <td><%= process.status %></td>
					  <td><%= process.estimatedCost %></td>
					  <td><%= process.estimatedSell %></td>
					  <td><%= process.overallCompletion %></td>
					  <td><span><a  href="/lots/<%= process._id %>" class="btn btn-default btn-m">Go</a></span></td>
					</tr>
				<% }); %>
			  </tbody>
			</table>

		</div>
			
	</div>



<% include partials/footer %>