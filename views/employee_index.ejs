	<div class = "container">
		<div class="jumbotron">
	  		<h1>Employee Search</h1>
	  		<div class="row">
	  			<div class="input-group input-group-lg col-lg-6">
					  <span class="input-group-addon" id="sizing-addon1">Key <i class="fas fa-key"></i></span>
					  <input type="number" class="form-control" placeholder="Enter Employee ID" aria-describedby="sizing-addon1">
				</div>
				<span><button class="btn btn-default btn-lg col-lg-6">Search</button></span>
	  		</div>
	  		<hr>
			<table class="table">
			  <thead>
			    <tr>

			      <th scope="col">Employee ID</th>
			      <th scope="col">First</th>
			      <th scope="col">Last</th>
			      <th scope="col">Department</th>
			      <th scope="col">Profile</th> 
			    </tr>
			  </thead>			
			  <tbody>
				<% employees.forEach(function(employee){ %>					  
					<tr>
					  <th scope="row"><%= employee.employeeID %></th>
					  <td><%= employee.firstName %></td>
					  <td><%= employee.lastName %></td>
					  <td><%= employee.department %></td>
					  <td><span><a  href="/employees/<%= employee._id %>" class="btn btn-default btn-m">Go</a></span></td>
					</tr>
				<% }); %>
			  </tbody>
			</table>

		</div>
			
	</div>


